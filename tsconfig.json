{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./app/*"],
      "@pages/*": ["./app/(pages)/*"],
      "@apply/*": ["./app/(pages)/(Subpages)/apply/*"],
      "@privacy/*": ["./app/(pages)/(Subpages)/privacy/*"],
      "@terms/*": ["./app/(pages)/(Subpages)/terms/*"],
      "@api/*": ["./app/apis/*"],
      "@components/*": ["./app/components/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
